#include <stdio.h>
int main ()
{
    int n, i;
    printf("Enter the value of n: ");
    scanf("%d", &n);
    if (n<1)
    {
    printf("Enter the number greater then 0.\n");
    return 1;
    }
     printf("Even numbers from 1 to %d are:\n" , n);
    for(i = 1; i<=n; i++)
    {
        if (i % 2== 0)
        {
            printf("%d",i);
        }
    }
}
